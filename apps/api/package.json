{
  "name": "@workspace/api",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/app.js",
  "types": "./dist/app.d.ts",
  "exports": {
    ".": {
      "types": "./dist/app.d.ts",
      "default": "./dist/app.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    }
  },
  "scripts": {
    "dev": "concurrently \"tsc -b --watch\" \"tsx watch src/index.ts\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:types": "tsc -b --watch",
    "build": "tsup",
    "build:types": "tsc -b",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@trpc/server": "^11.0.0",
    "@workspace/types": "workspace:*",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "concurrently": "^9.1.0",
    "eslint": "^9.18.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "5.7.3"
  }
}
